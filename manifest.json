{
    "name": "PT searcher",
    "version" : "1.0",
    "manifest_version" : 2,
    "description": "To search the torrents across the PT sites.",

    "browser_action": 
    {
        "default_icon" : {"16" : "icon16.png", "48" : "icon16.png", "128" : "icon16.png"},
        "default_title": "pt searcher",
        "default_popup": "popup.html"
    },

    "icons" : {"16" : "icon16.png", "48" : "icon16.png", "128" : "icon16.png"},

    "options_page": "options.html",

    "permissions": 
    [
        "<all_urls>",
        "storage",
        "tabs",
        "contextMenus",
        "declarativeContent"
    ],

    "commands": 
    {
        "_execute_browser_action": 
        {
            "suggested_key": 
            {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens hello.html"
        }
    },

    "background":{
        "scripts" :  ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["https://movie.douban.com/subject/*"],
            "js": ["doubansubject.js"]
        },

        {
            "matches": ["https://www.douban.com/search?*"],
            "js": ["doubanlist.js"]
        },

        {
            "matches": ["https://movie.douban.com/people/177132374/wish"],
            "js": ["mymovie.js"]
        }

    ]



}